{
  "compilerOptions": {
    "target": "es5",
    "module": "none",
    "outFile": "bin/index.js",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "inlineSources": true,
    "declaration": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es6", "dom"]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "bin"
  ]
}